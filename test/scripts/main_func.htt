
CLIENT
# Simple GET
_REQ localhost 16100 
__GET /test/get?param1=value1&param2=value2&param3=value3&param4& HTTP/1.1
__Host: localhost
__
_EXPECT . "param1 = value1"
_EXPECT . "param2 = value2"
_EXPECT . "param3 = value3"
_EXPECT . "param4 ="
_WAIT

# Simple POST
__POST /test/get HTTP/1.1
__Host: localhost
__Content-Type: application/x-www-form-urlencoded
__Content-Length: AUTO
__
__param1=value1&param2=value2&param3=value3&param4&
_EXPECT . "param1 = value1"
_EXPECT . "param2 = value2"
_EXPECT . "param3 = value3"
_EXPECT . "param4 ="
_WAIT

# POST with wrong content type
__POST /test/get HTTP/1.1
__Host: localhost
__Content-Type: foo/bar 
__Content-Length: AUTO
__
__param1=value1&param2=value2&param3=value3&param4&
_EXPECT . "!param1"
_EXPECT . "!param2"
_EXPECT . "!param3"
_EXPECT . "!param4"
_WAIT

# POST with no content type
__POST /test/get HTTP/1.1
__Host: localhost
__Content-Length: AUTO
__
__param1=value1&param2=value2&param3=value3&param4&
_EXPECT . "!param1"
_EXPECT . "!param2"
_EXPECT . "!param3"
_EXPECT . "!param4"
_WAIT

# POST multipart data
__POST /test/get HTTP/1.1
__Host: localhost
__Content-Type: multipart/form-data; boundary=foo
__Content-Length: AUTO
__
__--foo
__header1: value1 
__
__foobar1
__--foo
__header2: value2 
__header22: value22 
__
__foobar2
__--foo
__header3: value3 
__header31: value31 
__header32: value32 
__header33: value33 
__header34: value34 
__
__foobar3
__--foo--
_WAIT

END

